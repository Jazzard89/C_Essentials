<Window x:Class="Woordenboek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Woordenboek"
        mc:Ignorable="d"
        Title="Woordenboek" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20">
            <Label Content="Woord" Margin="0 30 0 0" />
            <TextBox Name="txtWoord" Margin="0 30 0 0" />
            <Label Content="Uitleg:" Margin="0 30 0 0" />
            <TextBox Name="txtUitleg" Height="100px" Margin="0 30 0 0" />
            <Button Name="btnVoegToe" Content="Voeg woord toe aan woordenboek" Margin="0 30 0 0" Click="btnVoegToe_Click" />
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20">
            <ListBox Name="lsbxLijst" Margin="0 30 0 0" Height="200" SelectionChanged="lsbxLijst_SelectionChanged"/>
            <TextBox Name="txtUitleg2" Height="100px" Margin="0 30 0 0" />
        </StackPanel>

    </Grid>
</Window>
