<Window x:Class="messagebox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:messagebox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Name="stckThis" Margin="10">
            <Label Content="Radio buttons"/>
            <RadioButton Content="Eerste keuze"/>
            <RadioButton Content="Tweede keuze"/>
            <RadioButton Content="Derde keuze" />
        </StackPanel>
        
        
        <StackPanel Margin="20" Grid.Row="3">
            <Label Content="The Button" />
            <Button Name="btnTheButton" Content="The Button" Click="btnTheButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
