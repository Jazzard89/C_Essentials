<Window x:Class="euroOmzettenNaarDollar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:euroOmzettenNaarDollar"
        mc:Ignorable="d"
        Title="Omzetten van EURO naar USD" Height="450" Width="800">
    <Grid>
        <Label Name="LblbedragInEuro" Content="Bedrag in Euro:
               " HorizontalAlignment="Left" Margin="154,137,0,0" VerticalAlignment="Top"/>
        <Label Name="LblBedragInDollar" Content="Bedrag in Dollar:" HorizontalAlignment="Left" Margin="154,191,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TxtEuro" HorizontalAlignment="Left" Margin="319,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TxtEuro_TextChanged"/>
        <TextBox Name="TxtDollar" HorizontalAlignment="Left" Margin="319,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="BtnBerekenen" Content="Berekenen" HorizontalAlignment="Left" Margin="509,140,0,0" VerticalAlignment="Top" Click="BtnBerekenen_Click"/>
        <Button Name="BtnWissen" Content="Wissen" HorizontalAlignment="Left" Margin="509,194,0,0" VerticalAlignment="Top" Width="60" Click="BtnWissen_Click"/>

    </Grid>
</Window>
