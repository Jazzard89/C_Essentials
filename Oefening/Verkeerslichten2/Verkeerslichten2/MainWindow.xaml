<Window x:Class="Verkeerslicht.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verkeerslicht"
        mc:Ignorable="d"
        Title="Vekeerslichten" Height="450" Width="800">

    <Canvas Width="100px">
        <StackPanel>
            <Image Name="Rood" Source="Rood.png" HorizontalAlignment="Left" Height="100px" VerticalAlignment="Top" Width="100px"/>
            <Image Name="Oranje" Visibility="Hidden" Source="Oranje.png" HorizontalAlignment="Left" Height="100px" VerticalAlignment="Top" Width="100px"/>
            <Image Name="Groen" Visibility="Hidden" Source="Groen.png" HorizontalAlignment="Left" Height="100px" VerticalAlignment="Top" Width="100px"/>
            <Label Name="Info" Content="" FontSize="48" FontWeight="Bold" Width="100px"></Label>
            <Button Name="Start" Content="Start" Click="Start_Click" Width="100px" Height="50px" HorizontalAlignment="Left"></Button>
        </StackPanel>
    </Canvas>
</Window>
